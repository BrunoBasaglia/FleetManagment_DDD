@model IEnumerable<GestaoDeFrota.MVC.ViewModels.VeiculoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
}

<h1>Frota</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo Veículo</a>
</p>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title"> Veículos</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Modelo.Fabricante)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Modelo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Placa)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Quilometragem)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Combustivel)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Valor)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Modelo.Fabricante.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Modelo.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Placa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quilometragem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Combustivel.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Valor)
                                        </td>
                                        <td>
                                            @Html.ActionLink("", "Edit", null, new { id = item.Id }, new { @class = "btn btn-sm btn-primary tim-icons icon-pencil" })
                                            @Html.ActionLink("Detalhar", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/assets/js/core/jquery.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}




